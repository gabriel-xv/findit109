<h1>Add a new product</h1>
<%= simple_form_for(@new_product) do |f| %>
  <%= f.input :name, input_html: { class: 'special', placeholder: 'Choose a name' }, label_html: { class: 'not-special'} %>
  <%= f.input :price, input_html: { class: 'special', placeholder: "5â‚¬" }, label_html: { class: 'not-special'} %>
  <%= f.input :condition, collection: Product::CONDITION, input_html: { class: 'special' }, label_html: { class: 'not-special' } %>
  <%= f.input :description, input_html: { class: 'special', placeholder: '25 - 400 characters' }, label_html: { class: 'not-special'} %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: 'submit-btn btn' %>
<% end %>
